---
import Wrapper from "../components/UI/Wrapper.astro";
import HtmlLayout from "../layouts/HtmlBaseLayout.astro";

const blogs = await Astro.glob('../pages/blogs/*.md');
---

<HtmlLayout title="Blogs">
  <section class="py-10">
    <Wrapper class="flex ">
	{
		blogs.map((blog) => {
			return <article class="[&:not(nth-child(3))]:mr-3 basis-2/6">
				<a href={ blog.url } title={ blog.frontmatter.title }>
					<img width="" src={ blog.frontmatter.image.url } alt={ blog.frontmatter.image.alt }/>	
				</a>
				<h2>
					<a href={ blog.url } title={ blog.frontmatter.title }>{ blog.frontmatter.title }</a>
				</h2>
				<p>{ blog.frontmatter.description }</p>

			</article>
		})
	}
    </Wrapper>
  </section>
</HtmlLayout>
